{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Produits</h1>
    <div>
    {% for key, product in products %}
        {{ product }}
        {% if (key + 1)%3 == 0 %}
            </div>
        {% endif %}
    {% else %}
        <div>Nothing to display
    {% endfor %}
    </div>
    {{ dump(products) }}
{% endblock %}
